<!-- Player Card Template -->
<div class="<%= card_background %> <%= padding_size %> rounded-lg border dark:border-gray-600 cursor-pointer hover:bg-gray-100 dark:hover:bg-gray-600 transition-colors"
     @click="selectPlayerForSubstitution('<%= player.slug %>', '<%= position %>')">
  <div class="flex justify-between items-start">
    <div class="flex-1">
      <div class="flex items-center space-x-1 mb-1">
        <span class="text-xs text-gray-600 dark:text-gray-400"><%= player.first_name %></span>
        <span class="font-bold text-sm text-gray-900 dark:text-white"><%= player.last_name %></span>
      </div>
      <div class="text-xs text-gray-500 dark:text-gray-400"><%= position_label %></div>
    </div>
    <div class="text-xs font-mono <%= stats_alignment %> space-y-1">
      <div class="<%= grade1_color %> dark:<%= grade1_dark_color %>"><%= grade1_name %>: <%= grade1_value %></div>
      <div class="<%= grade2_color %> dark:<%= grade2_dark_color %>"><%= grade2_name %>: <%= grade2_value %></div>
    </div>
  </div>
</div> 