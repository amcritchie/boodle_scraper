<div class="absolute bottom-full left-1/2 -translate-x-1/2 mb-2 hidden group-hover:block whitespace-nowrap rounded bg-gray-700 text-white py-1 px-2 text-sm shadow-lg z-10">
    <ul class="list-disc">
    <% players.each do |player| %>
        <li class="flex justify-between w-44">
            <span class="text-left">
                <%= player.send(tier_method).skill_icon rescue '-' %>
                 <%= player.tag rescue '-' %>
            </span>
            <span class="text-right">
                <%= player.send(tier_method) rescue '-' %>
                <%= player.send(grade_method) rescue '-' %>
            </span>
        </li>
    <% end %>
    </ul>
</div>