<div class="flex items-center space-x-2 text-left">
  <span class="text-2xl"><%= team&.emoji %></span>
  <a href="/teams/<%= team&.slug %>" target="_blank" class="hover:text-[#4BAF50] transition-colors">
    <div class="text-sm text-[#A5B1AA] dark:text-[#A5B1AA]">
      <span class="hidden lg:inline"><%= team&.location %></span>
      <span class="font-bold text-lg text-[#121E18] dark:text-[#E8F0E6] block md:inline"><%= team&.alias %></span>
      <% if is_home %>
        <span class="ml-2 text-sm hidden md:inline">🏠</span>
      <% end %>
    </div>
  </a>
</div>
