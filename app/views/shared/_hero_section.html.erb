<!-- Hero Section -->
<% 
  # Set default values for all optional parameters
  local_title = local_assigns[:title] || 'Page Title'
  local_subtitle = local_assigns[:subtitle]
  local_week = local_assigns[:week]
  local_year = local_assigns[:year]
  local_gradient_title = local_assigns[:gradient_title] || false
  local_padding = local_assigns[:padding] || 'py-8'
%>
<div class="bg-gradient-to-br from-[#121E18] via-[#1a2d24] to-[#4BAF50] dark:from-[#121E18] dark:via-[#1a2d24] dark:to-[#4BAF50] text-[#E8F0E6] border-b border-[#4BAF50]/20">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 <%= local_padding %>">
    <div class="text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-2 <%= local_gradient_title ? 'bg-gradient-to-r from-[#FFFFFF] to-[#FFFFFF] bg-clip-text text-transparent' : 'text-white drop-shadow-lg' %>">
        <%= local_title %>
      </h1>
      <% if local_subtitle.present? %>
        <h2 class="text-2xl md:text-3xl font-semibold mb-4 text-[#A5B1AA] drop-shadow-lg">
          <%= local_subtitle %>
        </h2>
      <% end %>

    </div>
  </div>
</div>
