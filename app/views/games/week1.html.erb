
    <!-- Page Title -->
    <div class="text-center mb-12">
      <h2 class="text-4xl font-bold text-gray-900 dark:text-white mb-4"><%= @year %> NFL Week 1 Games</h2>
      <p class="text-lg text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
        Predicted scores based on team matchups and player grades
      </p>
    </div>

    <!-- Navigation -->
    <div class="flex justify-center mb-8">
      <a href="<%= games_betting_path(@year) %>" class="inline-flex items-center px-6 py-3 bg-green-600 text-white text-lg font-semibold rounded-lg hover:bg-green-700 transition-colors shadow-lg">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
        </svg>
        Enter Betting Data
      </a>
    </div>

    <!-- Games Grid -->
    <div class="grid gap-6 mb-12">
      <% @games_with_predictions.each_with_index do |game_data, index| %>
        <!-- Game Card -->
        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg border border-gray-200 dark:border-gray-700 overflow-hidden">
          <!-- Game Header -->
          <div class="bg-gradient-to-r from-blue-600 to-blue-700 px-6 py-4">
            <div class="text-white">
              <div class="text-lg font-semibold">
                Game <%= index + 1 %> â€¢ <%= game_data[:game].away_team&.name %> @ <%= game_data[:game].home_team&.name %>
              </div>
              <div class="text-sm text-blue-100" 
                   data-controller="timezone" 
                   data-timezone-kickoff-value="<%= game_data[:game].kickoff_at&.iso8601 %>">
                <span data-timezone-target="time">
                  <%= game_data[:game].browser_time_display %>
                </span>
              </div>
            </div>
          </div>

          <!-- Game Content -->
          <div class="p-8">
            <!-- Score Display -->
            <div class="grid grid-cols-3 gap-8 items-center mb-8">
              <!-- Away Team -->
              <div class="text-center">
                <div class="flex items-center justify-center space-x-3 mb-4">
                  <span class="text-4xl"><%= game_data[:game].away_team&.emoji %></span>
                  <div>
                    <div class="text-xl font-bold text-gray-900 dark:text-white">
                      <%= game_data[:game].away_team&.name %>
                    </div>
                    <div class="text-sm text-gray-500 dark:text-gray-400">Away</div>
                  </div>
                </div>
                <div class="text-5xl font-bold text-blue-600 mb-4">
                  <% if game_data[:game].favorite && game_data[:game].favorite_spread && game_data[:game].over_under %>
                    <%= game_data[:game].away_implied_total&.football_round || '0' %> 
                  <% else %>
                    <%= '--' %>
                  <% end %>
                </div>
                <div class="relative">
                  <div class="text-md -top-8 left-2 font-bold text-blue-600 mb-4 absolute inset-0 flex items-left justify-left z-10">
                    <%= game_data[:game].away_implied_total&.score_emojis %>
                  </div>
                  <% if game_data[:away_matchup] %>
                    <div class="grid grid-cols-4 gap-1 text-xs text-gray-500 dark:text-gray-400">
                      <div class="bg-red-50 dark:bg-red-900/20 p-2 rounded">
                        <div class="font-semibold text-red-700 dark:text-red-300">Est</div>
                        <div class="font-mono"><%= game_data[:away_matchup].predicted_score.to_i %></div>
                      </div>
                      <div class="bg-blue-50 dark:bg-blue-900/20 p-2 rounded">
                        <div class="font-semibold text-blue-700 dark:text-blue-300">Pass</div>
                        <div class="font-mono"><%= game_data[:away_matchup].passing_td_points || 0 %></div>
                      </div>
                      <div class="bg-green-50 dark:bg-green-900/20 p-2 rounded">
                        <div class="font-semibold text-green-700 dark:text-green-300">Rush</div>
                        <div class="font-mono"><%= game_data[:away_matchup].rushing_td_points || 0 %></div>
                      </div>
                      <div class="bg-yellow-50 dark:bg-yellow-900/20 p-2 rounded">
                        <div class="font-semibold text-yellow-700 dark:text-yellow-300">FG</div>
                        <div class="font-mono"><%= game_data[:away_matchup].field_goal_points || 0 %></div>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>

              <!-- VS -->
              <div class="text-center">
                <div class="text-6xl font-bold text-gray-300 dark:text-gray-600 mb-4">VS</div>
                <div class="bg-gray-100 dark:bg-gray-700 rounded-lg p-4 mt-8">
                  <div class="text-sm text-gray-600 dark:text-gray-300 mb-1">Total Points</div>
                  <div class="text-2xl font-bold text-gray-800 dark:text-white">
                    <% if game_data[:game].favorite && game_data[:game].favorite_spread && game_data[:game].over_under %>
                      <%= game_data[:game].over_under %>
                    <% else %>
                      <% 
                        away_score = game_data[:away_matchup] ? (game_data[:away_matchup].passing_td_points || 0) + (game_data[:away_matchup].rushing_td_points || 0) + (game_data[:away_matchup].field_goal_points || 0) : 0
                        home_score = game_data[:home_matchup] ? (game_data[:home_matchup].passing_td_points || 0) + (game_data[:home_matchup].rushing_td_points || 0) + (game_data[:home_matchup].field_goal_points || 0) : 0
                      %>
                      <%= away_score + home_score %>
                    <% end %>
                  </div>
                </div>
              </div>

              <!-- Home Team -->
              <div class="text-center">
                <div class="flex items-center justify-center space-x-3 mb-4">
                  <div>
                    <div class="text-xl font-bold text-gray-900 dark:text-white">
                      <%= game_data[:game].home_team&.name %>
                    </div>
                    <div class="text-sm text-gray-500 dark:text-gray-400">Home</div>
                  </div>
                  <span class="text-4xl"><%= game_data[:game].home_team&.emoji %></span>
                </div>
                <div class="text-5xl font-bold text-red-600 mb-4">
                  <% if game_data[:game].favorite && game_data[:game].favorite_spread && game_data[:game].over_under %>
                    <%= game_data[:game].home_implied_total&.football_round || '0' %>
                  <% else %>
                    <%= '--' %>
                  <% end %>
                </div>
                <div class="relative">
                  <div class="text-md -top-8 left-2 font-bold text-red-600 mb-4 absolute inset-0 flex items-left justify-left z-10">
                    <%= game_data[:game].home_implied_total&.score_emojis %>
                  </div>
                  <% if game_data[:home_matchup] %>
                    <div class="grid grid-cols-4 gap-2 text-xs text-gray-500 dark:text-gray-400">
                      <div class="bg-blue-50 dark:bg-blue-900/20 p-2 rounded">
                        <div class="font-semibold text-blue-700 dark:text-blue-300">Est</div>
                        <div class="font-mono"><%= game_data[:home_matchup].predicted_score.to_i %></div>
                      </div>
                      <div class="bg-blue-50 dark:bg-blue-900/20 p-2 rounded">
                        <div class="font-semibold text-blue-700 dark:text-blue-300">Pass</div>
                        <div class="font-mono"><%= game_data[:home_matchup].passing_td_points || 0 %></div>
                      </div>
                      <div class="bg-green-50 dark:bg-green-900/20 p-2 rounded">
                        <div class="font-semibold text-green-700 dark:text-green-300">Rush</div>
                        <div class="font-mono"><%= game_data[:home_matchup].rushing_td_points || 0 %></div>
                      </div>
                      <div class="bg-yellow-50 dark:bg-yellow-900/20 p-2 rounded">
                        <div class="font-semibold text-yellow-700 dark:text-yellow-300">FG</div>
                        <div class="font-mono"><%= game_data[:home_matchup].field_goal_points || 0 %></div>
                    </div>
                  </div>
                <% end %>
                </div>
              </div>
            </div>



            <!-- Matchup Details -->
            <% if game_data[:home_matchup] && game_data[:away_matchup] %>
              <div class="mt-8 pt-6 border-t border-gray-200 dark:border-gray-700">
                <div class="grid grid-cols-2 gap-6">
                  <!-- Away Team Matchup Details -->
                  <div class="bg-gray-50 dark:bg-gray-700 rounded-lg p-4">
                    <h4 class="font-semibold text-gray-900 dark:text-white mb-3 text-center">
                      <%= game_data[:game].away_team&.name %> Offense vs <%= game_data[:game].home_team&.name %> Defense
                    </h4>
                    <div class="space-y-2 text-sm">
                      <div class="flex justify-between">
                        <span class="text-gray-600 dark:text-gray-300">Passing Attack:</span>
                        <span class="font-mono font-semibold text-blue-600 dark:text-blue-400"><%= game_data[:away_matchup].passing_attack_score || 0 %></span>
                      </div>
                      <div class="flex justify-between">
                        <span class="text-gray-600 dark:text-gray-300">Rushing Attack:</span>
                        <span class="font-mono font-semibold text-green-600 dark:text-green-400"><%= game_data[:away_matchup].rushing_attack_score || 0 %></span>
                      </div>
                      <div class="flex justify-between">
                        <span class="text-gray-600 dark:text-gray-300">Field Goal:</span>
                        <span class="font-mono font-semibold text-yellow-600 dark:text-yellow-400"><%= game_data[:away_matchup].field_goal_score || 0 %></span>
                      </div>
                    </div>
                  </div>

                  <!-- Home Team Matchup Details -->
                  <div class="bg-gray-50 dark:bg-gray-700 rounded-lg p-4">
                    <h4 class="font-semibold text-gray-900 dark:text-white mb-3 text-center">
                      <%= game_data[:game].home_team&.name %> Offense vs <%= game_data[:game].away_team&.name %> Defense
                    </h4>
                    <div class="space-y-2 text-sm">
                      <div class="flex justify-between">
                        <span class="text-gray-600 dark:text-gray-300">Passing Attack:</span>
                        <span class="font-mono font-semibold text-blue-600 dark:text-blue-400"><%= game_data[:home_matchup].passing_attack_score || 0 %></span>
                      </div>
                      <div class="flex justify-between">
                        <span class="text-gray-600 dark:text-gray-300">Rushing Attack:</span>
                        <span class="font-mono font-semibold text-green-700 dark:text-green-400"><%= game_data[:home_matchup].rushing_attack_score || 0 %></span>
                      </div>
                      <div class="flex justify-between">
                        <span class="text-gray-600 dark:text-gray-300">Field Goal:</span>
                        <span class="font-mono font-semibold text-yellow-600 dark:text-yellow-400"><%= game_data[:home_matchup].field_goal_score || 0 %></span>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>

          </div>
        </div>
      <% end %>
    </div>

    <!-- Summary Stats -->
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg border border-gray-200 dark:border-gray-700 p-8">
      <div class="bg-gradient-to-r from-green-500 to-green-600 px-6 py-4 -m-8 mb-6 rounded-t-xl">
        <div class="flex items-center space-x-3">
          <span class="text-2xl">ðŸ“Š</span>
          <h2 class="text-xl font-bold text-white">Week 1 Summary</h2>
        </div>
      </div>
      <div class="grid grid-cols-4 gap-6 text-center">
        <div class="bg-blue-50 dark:bg-blue-900/20 rounded-lg p-4">
          <div class="text-3xl font-bold text-blue-600 dark:text-blue-400"><%= @games_with_predictions.count %></div>
          <div class="text-sm text-gray-600 dark:text-gray-300 font-medium">Games</div>
        </div>
        <div class="bg-green-50 dark:bg-green-900/20 rounded-lg p-4">
          <div class="text-3xl font-bold text-green-600 dark:text-green-400">
            <% 
              total_points = @games_with_predictions.sum do |g| 
                away_score = g[:away_matchup] ? (g[:away_matchup].passing_td_points || 0) + (g[:away_matchup].rushing_td_points || 0) + (g[:away_matchup].field_goal_points || 0) : 0
                home_score = g[:home_matchup] ? (g[:home_matchup].passing_td_points || 0) + (g[:home_matchup].rushing_td_points || 0) + (g[:home_matchup].field_goal_points || 0) : 0
                away_score + home_score
              end
            %>
            <%= total_points %>
          </div>
          <div class="text-sm text-gray-600 dark:text-gray-300 font-medium">Total Points</div>
        </div>
        <div class="bg-purple-50 dark:bg-purple-900/20 rounded-lg p-4">
          <div class="text-3xl font-bold text-purple-600 dark:text-purple-400">
            <% 
              avg_points = @games_with_predictions.count > 0 ? (total_points.to_f / @games_with_predictions.count).football_round : 0
            %>
            <%= avg_points %>
          </div>
          <div class="text-sm text-gray-600 dark:text-gray-300 font-medium">Avg Points/Game</div>
        </div>
        <div class="bg-orange-50 dark:bg-orange-900/20 rounded-lg p-4">
          <div class="text-3xl font-bold text-orange-600 dark:text-orange-400">
            <%= @games_with_predictions.count { |g| g[:game].primetime } %>
          </div>
          <div class="text-sm text-gray-600 dark:text-gray-300 font-medium">Primetime Games</div>
        </div>
      </div>
    </div>

    <!-- Footer -->
    <footer class="mt-16 text-center">
      <div class="text-sm text-gray-500 dark:text-gray-400">
        <p>Data updated for Week 1 of the <%= @year %> NFL season</p>
        <p class="mt-2">
          <a href="<%= matchups_week1_path(@year) %>" class="text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300 underline">
            View Matchups
          </a>
          <span class="mx-2">â€¢</span>
          <a href="<%= matchups_summary_path(@year) %>" class="text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300 underline">
            View Summary
          </a>
          <span class="mx-2">â€¢</span>
          <a href="<%= teams_rankings_path(@year) %>" class="text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300 underline">
            View Rankings
          </a>
        </p>
      </div>
    </footer>