<div class="min-h-screen bg-gradient-to-br from-[#0A1A0F] via-[#1A2A1F] to-[#0A1A0F] text-[#E8F0E6]">
  <div class="container mx-auto px-4 py-8">
    
    <!-- Page Header -->
    <div class="text-center mb-12">
      <h1 class="text-5xl font-bold mb-4 bg-gradient-to-r from-[#4BAF50] via-[#8BC34A] to-[#4CAF50] bg-clip-text text-transparent">
        All Games
      </h1>
      <p class="text-xl text-[#A5B1AA]">Complete game database with detailed scoring breakdowns</p>
    </div>

    <!-- Season Filter Buttons -->
    <div class="flex flex-wrap justify-center gap-3 mb-8">
      <% @seasons.each do |season| %>
        <%= link_to all_games_path(year: season), 
            class: "px-6 py-3 rounded-xl font-semibold transition-all duration-300 #{@selected_year == season ? 'bg-[#4BAF50] text-white shadow-lg shadow-[#4BAF50]/30' : 'bg-white/10 text-[#E8F0E6] hover:bg-white/20 hover:shadow-lg'}" do %>
          <%= season %>
        <% end %>
      <% end %>
    </div>

    <!-- Games List -->
    <div class="space-y-6">
      <% @games.each do |game| %>
        <div class="bg-gradient-to-r from-[#1A2A1F] to-[#2A3A2F] rounded-2xl overflow-hidden border border-white/10 hover:border-white/20 transition-all duration-300 hover:shadow-2xl hover:shadow-[#4BAF50]/20">
          
          <!-- Game Header -->
          <div class="px-6 py-4 bg-gradient-to-r from-[#2A3A2F] to-[#3A4A3F] border-b border-white/10">
            <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
              <div class="flex items-center space-x-4">
                <% if game.venue %>
                  <span class="flex items-center space-x-2 text-[#A5B1AA]">
                    <span><%= game.venue.emoji %></span>
                    <span><%= game.venue.city %></span>
                  </span>
                <% end %>
                <span class="text-[#A5B1AA]">Week <%= game.week_slug %></span>
                <% if game.kickoff_at %>
                  <span class="text-[#A5B1AA]">
                    <%= game.kickoff_at.strftime("%B %d, %Y at %I:%M %p") %>
                  </span>
                <% end %>
              </div>
              <div class="flex items-center space-x-3">
                <% if game.primetime %>
                  <span class="bg-yellow-500 text-yellow-900 text-xs font-bold px-3 py-1 rounded-full">
                    üèüÔ∏è Primetime
                  </span>
                <% end %>
                <% if game.overtime %>
                  <span class="bg-orange-500 text-orange-900 text-xs font-bold px-3 py-1 rounded-full">
                    ‚è∞ Overtime
                  </span>
                <% end %>
              </div>
            </div>
          </div>

          <!-- Teams and Scores -->
          <div class="px-6 py-6">
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 items-center">
              
              <!-- Away Team -->
              <div class="text-center">
                <div class="flex items-center justify-center space-x-3 mb-3">
                  <span class="text-3xl"><%= game.away_team&.emoji %></span>
                  <div class="text-left">
                    <div class="text-lg text-[#E8F0E6]"><%= game.away_team&.location %></div>
                    <h3 class="text-xl font-bold text-[#E8F0E6]"><%= game.away_team&.alias %></h3>
                  </div>
                </div>
                <div class="text-4xl font-bold text-[#4BAF50]"><%= game.away_score %></div>
              </div>

              <!-- VS -->
              <div class="text-center">
                <div class="text-3xl font-bold text-[#A5B1AA] mb-4">VS</div>
                <div class="bg-white/10 backdrop-blur-sm rounded-xl p-4 border border-white/20">
                  <div class="text-sm text-[#A5B1AA] mb-1">Final Score</div>
                  <div class="text-2xl font-bold">
                    <%= game.away_score.to_i + game.home_score.to_i %>
                  </div>
                </div>
              </div>

              <!-- Home Team -->
              <div class="text-center">
                <div class="flex items-center justify-center space-x-3 mb-3">
                  <span class="text-3xl"><%= game.home_team&.emoji %></span>
                  <div class="text-left">
                    <div class="text-lg text-[#E8F0E6]"><%= game.home_team&.location %></div>
                    <h3 class="text-xl font-bold text-[#E8F0E6]"><%= game.home_team&.alias %></h3>
                  </div>
                </div>
                <div class="text-4xl font-bold text-[#FF7C47]"><%= game.home_score %></div>
              </div>
            </div>
          </div>

          <!-- Scoring Breakdown -->
          <div class="px-6 py-4 bg-gradient-to-r from-[#0A1A0F] to-[#1A2A1F] border-t border-white/10">
            <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
              
              <!-- Away Team Scoring -->
              <div class="space-y-2">
                <h4 class="text-sm font-semibold text-[#4BAF50] text-center">Away Scoring</h4>
                <div class="grid grid-cols-2 gap-2 text-xs">
                  <div class="text-center">
                    <div class="text-[#A5B1AA]">Pass TD</div>
                    <div class="font-bold text-[#E8F0E6]"><%= game.away_passing_touchdowns || 0 %></div>
                  </div>
                  <div class="text-center">
                    <div class="text-[#A5B1AA]">Rush TD</div>
                    <div class="font-bold text-[#E8F0E6]"><%= game.away_rushing_touchdowns || 0 %></div>
                  </div>
                  <div class="text-center">
                    <div class="text-[#A5B1AA]">Field Goals</div>
                    <div class="font-bold text-[#E8F0E6]"><%= game.away_field_goals || 0 %></div>
                  </div>
                  <div class="text-center">
                    <div class="text-[#A5B1AA]">Extra Points</div>
                    <div class="font-bold text-[#E8F0E6]"><%= game.away_extra_points || 0 %></div>
                  </div>
                </div>
              </div>

              <!-- Home Team Scoring -->
              <div class="space-y-2">
                <h4 class="text-sm font-semibold text-[#FF7C47] text-center">Home Scoring</h4>
                <div class="grid grid-cols-2 gap-2 text-xs">
                  <div class="text-center">
                    <div class="text-[#A5B1AA]">Pass TD</div>
                    <div class="font-bold text-[#E8F0E6]"><%= game.home_passing_touchdowns || 0 %></div>
                  </div>
                  <div class="text-center">
                    <div class="text-[#A5B1AA]">Rush TD</div>
                    <div class="font-bold text-[#E8F0E6]"><%= game.home_rushing_touchdowns || 0 %></div>
                  </div>
                  <div class="text-center">
                    <div class="text-[#A5B1AA]">Field Goals</div>
                    <div class="font-bold text-[#E8F0E6]"><%= game.home_field_goals || 0 %></div>
                  </div>
                  <div class="text-center">
                    <div class="text-[#A5B1AA]">Extra Points</div>
                    <div class="font-bold text-[#E8F0E6]"><%= game.home_extra_points || 0 %></div>
                  </div>
                </div>
              </div>

              <!-- Game Details -->
              <div class="space-y-2">
                <h4 class="text-sm font-semibold text-[#A5B1AA] text-center">Game Details</h4>
                <div class="space-y-1 text-xs text-center">
                  <div>
                    <span class="text-[#A5B1AA]">Status:</span>
                    <span class="font-bold text-[#E8F0E6]"><%= game.status || 'Unknown' %></span>
                  </div>
                  <div>
                    <span class="text-[#A5B1AA]">Duration:</span>
                    <span class="font-bold text-[#E8F0E6]"><%= game.duration || 'N/A' %></span>
                  </div>
                  <% if game.attendance %>
                    <div>
                      <span class="text-[#A5B1AA]">Attendance:</span>
                      <span class="font-bold text-[#E8F0E6]"><%= number_with_delimiter(game.attendance) %></span>
                    </div>
                  <% end %>
                </div>
              </div>

              <!-- Betting Info -->
              <div class="space-y-2">
                <h4 class="text-sm font-semibold text-[#A5B1AA] text-center">Betting</h4>
                <div class="space-y-1 text-xs text-center">
                  <% if game.favorite %>
                    <div>
                      <span class="text-[#A5B1AA]">Favorite:</span>
                      <span class="font-bold text-[#E8F0E6]"><%= game.favorite %></span>
                    </div>
                  <% end %>
                  <% if game.favorite_spread %>
                    <div>
                      <span class="text-[#A5B1AA]">Spread:</span>
                      <span class="font-bold text-[#E8F0E6]"><%= game.favorite_spread %></span>
                    </div>
                  <% end %>
                  <% if game.over_under %>
                    <div>
                      <span class="text-[#A5B1AA]">O/U:</span>
                      <span class="font-bold text-[#E8F0E6]"><%= game.over_under %></span>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>

        </div>
      <% end %>
    </div>

    <!-- No Games Message -->
    <% if @games.empty? %>
      <div class="text-center py-12">
        <div class="text-6xl mb-4">üèà</div>
        <h3 class="text-2xl font-bold text-[#E8F0E6] mb-2">No Games Found</h3>
        <p class="text-[#A5B1AA]">No games were found for the <%= @selected_year %> season.</p>
      </div>
    <% end %>

  </div>
</div>
