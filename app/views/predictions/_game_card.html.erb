<%= link_to prediction_show_path(@year, 1, game_data[:game].slug), class: "block group" do %>
  <div class="w-full rounded-2xl overflow-hidden hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1" style="<%= game_data[:game].hero_gradient_style %>">
    
    <!-- Game Header -->
    <div class="px-6 py-2">
      <div class="flex justify-center items-center text-[#E8F0E6]">
        <div class="flex items-center space-x-4">
          <% if game_data[:game].venue %>
            <span class="flex items-center space-x-2 text-[#A5B1AA]">
              <span><%= game_data[:venue].emoji %></span>
              <span><%= game_data[:venue].city %></span>
            </span>
          <% end %>
        </div>
        <% if game_data[:game].primetime %>
          <span class="bg-yellow-500 text-yellow-900 text-xs font-bold px-3 py-1 rounded-full">
            üèüÔ∏è Primetime
          </span>
        <% end %>
      </div>
    </div>

    <!-- Team Matchup Display with Team Colors -->
    <div class="px-8 py-6">
      <div class="flex flex-col md:flex-row items-center justify-center space-y-4 md:space-y-0 md:space-x-8">
        
        <!-- Away Team Card -->
        <div class="backdrop-blur-sm rounded-2xl p-6 border border-white/20 w-full md:w-64 md:flex-shrink-0" style="background-color: <%= game_data[:away_team]&.color_dark || '#121E18' %>20; border-color: <%= game_data[:away_team]&.color_alt1 || '#4BAF50' %>/40;">
          <div class="text-center">
            <div class="flex items-center justify-center space-x-3 mb-2">
              <span class="text-4xl"><%= game_data[:away_team]&.emoji %></span>
              <div class="text-left">
                <div class="text-lg text-[#E8F0E6]"><%= game_data[:away_team]&.location %></div>
                <h2 class="text-2xl font-bold text-[#E8F0E6]">
                  <%= game_data[:away_team]&.alias %>
                </h2>
              </div>
            </div>

            <!-- Predicted Score -->
            <div class="text-6xl font-bold" style="color: <%= game_data[:away_team]&.color_accent_text || '#4BAF50' %>;">
              <%= game_data[:away_matchup]&.predicted_score.football_round || 'N/A' %>
            </div>
          </div>
        </div>
        
        <!-- VS and Total Score -->
        <div class="text-center md:mx-4">
          <div class="text-4xl font-bold mb-4" style="<%= game_data[:game]&.text_gradient_style || 'color: #E8F0E6;' %>">VS</div>
          <div class="bg-white/20 backdrop-blur-sm rounded-xl p-4 text-[#E8F0E6] border border-white/20">
            <div class="text-sm text-[#A5B1AA] mb-1">Total Points</div>
            <div class="text-3xl font-bold">
              <% 
                total_score = (game_data[:home_matchup]&.predicted_score.football_round || 0) + (game_data[:away_matchup]&.predicted_score.football_round || 0)
              %>
              <%= total_score %>
            </div>
          </div>
        </div>
        
        <!-- Home Team Card -->
        <div class="backdrop-blur-sm rounded-2xl p-6 border border-white/20 w-full md:w-64 md:flex-shrink-0" style="background-color: <%= game_data[:home_team]&.color_dark || '#121E18' %>20; border-color: <%= game_data[:home_team]&.color_alt1 || '#FF7C47' %>/40;">
          <div class="text-center">
            <div class="flex items-center justify-center space-x-3 mb-2">
              <span class="text-4xl"><%= game_data[:home_team]&.emoji %></span>
              <div class="text-left">
                <div class="text-lg text-[#E8F0E6]"><%= game_data[:home_team]&.location %></div>
                <h2 class="text-2xl font-bold text-[#E8F0E6]">
                  <%= game_data[:home_team]&.alias %>
                </h2>
              </div>
            </div>

            <!-- Predicted Score -->
            <div class="text-6xl font-bold" style="color: <%= game_data[:home_team]&.color_accent_text || '#FF7C47' %>;">
              <%= game_data[:home_matchup]&.predicted_score.football_round || 'N/A' %>
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>
<% end %>
