<% content_for :title, @page_title %>
<% content_for :meta_description, @page_description %>

<div class="min-h-screen bg-gray-50 dark:bg-gray-900">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    
    <!-- SEO Optimized Header -->
    <div class="text-center mb-12">
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-4">
        <%= @away_team&.alias %> vs <%= @home_team&.alias %> Prediction
      </h1>
      <p class="text-xl text-gray-600 dark:text-gray-300">
        <%= @week_display %> ‚Ä¢ <%= @year %> NFL Season
      </p>
    </div>

    <!-- Game Information Card -->
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg border border-gray-200 dark:border-gray-700 overflow-hidden mb-8">
      <div class="bg-gradient-to-r from-blue-600 to-blue-700 px-6 py-4">
        <div class="text-white">
          <div class="text-lg font-semibold mb-2">
            <%= @away_team&.name %> @ <%= @home_team&.name %>
          </div>
          <div class="text-sm text-blue-100">
            <span class="mr-4">üìç Soldier Field</span>
            <span class="mr-4">‚òÄÔ∏è Sunny</span>
            <span data-controller="timezone" data-timezone-kickoff-value="<%= @game.kickoff_at&.iso8601 %>">
              <span data-timezone-target="time">
                <%= @game.browser_time_display %>
              </span>
            </span>
          </div>
        </div>
      </div>

      <!-- Game Details -->
      <div class="p-8">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 items-center">
          
          <!-- Away Team -->
          <div class="text-center">
            <div class="flex items-center justify-center space-x-3 mb-4">
              <span class="text-4xl"><%= @away_team&.emoji %></span>
              <div>
                <div class="text-xl font-bold text-gray-900 dark:text-white">
                  <div class="text-sm text-gray-600 dark:text-gray-400">
                    <span class="block lg:inline"><%= @away_team&.location %></span>
                    <span class="font-bold text-lg text-gray-900 dark:text-white block lg:inline"><%= @away_team&.alias %></span>
                  </div>
                </div>
                <div class="text-sm text-gray-500 dark:text-gray-400">Away</div>
              </div>
            </div>
            
            <!-- Predicted Score -->
            <div class="text-5xl font-bold text-blue-600 mb-4">
              <%= @away_predicted_score %>
            </div>
            
            <!-- Implied Total -->
            <% if @game.away_implied_total %>
              <div class="text-sm text-gray-500 dark:text-gray-400 mb-2">
                Implied Total: <%= @game.away_implied_total&.football_round || '--' %>
              </div>
            <% end %>
            
            <!-- Scoring Breakdown -->
            <% if @away_matchup %>
              <div class="grid grid-cols-3 gap-2 text-xs text-gray-500 dark:text-gray-400">
                <div class="bg-blue-50 dark:bg-blue-900/20 p-2 rounded">
                  <div class="font-semibold text-blue-700 dark:text-blue-300">Pass</div>
                  <div class="font-mono"><%= @away_matchup.passing_td_points || 0 %></div>
                </div>
                <div class="bg-green-50 dark:bg-green-900/20 p-2 rounded">
                  <div class="font-semibold text-green-700 dark:text-green-300">Rush</div>
                  <div class="font-mono"><%= @away_matchup.rushing_td_points || 0 %></div>
                </div>
                <div class="bg-yellow-50 dark:bg-yellow-900/20 p-2 rounded">
                  <div class="font-semibold text-yellow-700 dark:text-yellow-300">FG</div>
                  <div class="font-mono"><%= @away_matchup.field_goal_points || 0 %></div>
                </div>
              </div>
            <% end %>
          </div>

          <!-- VS -->
          <div class="text-center">
            <div class="text-6xl font-bold text-gray-300 dark:text-gray-600 mb-4">VS</div>
            <div class="bg-gray-100 dark:bg-gray-700 rounded-lg p-4">
              <div class="text-sm text-gray-600 dark:text-gray-300 mb-1">Total Points</div>
              <div class="text-2xl font-bold text-gray-800 dark:text-white">
                <%= @total_predicted_score %>
              </div>
            </div>
            
            <!-- Week Info -->
            <div class="mt-4 text-sm text-gray-500 dark:text-gray-400">
              <%= @week_display %>
            </div>
          </div>

          <!-- Home Team -->
          <div class="text-center">
            <div class="flex items-center justify-center space-x-3 mb-4">
              <span class="text-4xl"><%= @home_team&.emoji %></span>
              <div>
                <div class="text-xl font-bold text-gray-900 dark:text-white">
                  <div class="text-sm text-gray-600 dark:text-gray-400">
                    <span class="block lg:inline"><%= @home_team&.location %></span>
                    <span class="font-bold text-lg text-gray-900 dark:text-white block lg:inline"><%= @home_team&.alias %></span>
                  </div>
                </div>
                <div class="text-sm text-gray-500 dark:text-gray-400">Home</div>
              </div>
            </div>
            
            <!-- Predicted Score -->
            <div class="text-5xl font-bold text-red-600 mb-4">
              <%= @home_predicted_score %>
            </div>
            
            <!-- Implied Total -->
            <% if @game.home_implied_total %>
              <div class="text-sm text-gray-500 dark:text-gray-400 mb-2">
                Implied Total: <%= @game.home_implied_total&.football_round || '--' %>
              </div>
            <% end %>
            
            <!-- Scoring Breakdown -->
            <% if @home_matchup %>
              <div class="grid grid-cols-3 gap-2 text-xs text-gray-500 dark:text-gray-400">
                <div class="bg-blue-50 dark:bg-blue-900/20 p-2 rounded">
                  <div class="font-semibold text-blue-700 dark:text-blue-300">Pass</div>
                  <div class="font-mono"><%= @home_matchup.passing_td_points || 0 %></div>
                </div>
                <div class="bg-green-50 dark:bg-green-900/20 p-2 rounded">
                  <div class="font-semibold text-green-700 dark:text-green-300">Rush</div>
                  <div class="font-mono"><%= @home_matchup.rushing_td_points || 0 %></div>
                </div>
                <div class="bg-yellow-50 dark:bg-yellow-900/20 p-2 rounded">
                  <div class="font-semibold text-yellow-700 dark:text-yellow-300">FG</div>
                  <div class="font-mono"><%= @home_matchup.field_goal_points || 0 %></div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Prediction Analysis -->
    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg border border-gray-200 dark:border-gray-700 p-8 mb-8">
      <div class="bg-gradient-to-r from-green-500 to-green-600 px-6 py-4 -m-8 mb-6 rounded-t-xl">
        <div class="flex items-center space-x-3">
          <span class="text-2xl">üîÆ</span>
          <h2 class="text-xl font-bold text-white">Prediction Analysis</h2>
        </div>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                  <!-- Away Team Analysis -->
        <div>
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">
            <%= @away_team&.alias %> Offense vs <%= @home_team&.alias %> Defense
          </h3>
          <% if @away_matchup %>
            <div class="space-y-3">
              <div class="flex justify-between items-center p-3 bg-gray-50 dark:bg-gray-700 rounded-lg">
                <span class="text-gray-600 dark:text-gray-300">Passing Attack Rank:</span>
                <span class="font-mono font-semibold text-blue-600 dark:text-blue-400">
                  <%= @away_matchup.passing_attack_rank || 0 %>
                </span>
              </div>
              <div class="flex justify-between items-center p-3 bg-gray-50 dark:bg-gray-700 rounded-lg">
                <span class="text-gray-600 dark:text-gray-300">Rushing Attack Rank:</span>
                <span class="font-mono font-semibold text-green-700 dark:text-green-400">
                  <%= @away_matchup.rushing_attack_rank || 0 %>
                </span>
              </div>
              <div class="flex justify-between items-center p-3 bg-gray-50 dark:bg-gray-700 rounded-lg">
                <span class="text-gray-600 dark:text-gray-300">Field Goal Rank:</span>
                <span class="font-mono font-semibold text-yellow-600 dark:text-yellow-400">
                  <%= @away_matchup.field_goal_rank || 0 %>
                </span>
              </div>
            </div>
          <% end %>
        </div>

        <!-- Home Team Analysis -->
        <div>
          <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">
            <%= @home_team&.alias %> Offense vs <%= @away_team&.alias %> Defense
          </h3>
          <% if @home_matchup %>
            <div class="space-y-3">
              <div class="flex justify-between items-center p-3 bg-gray-50 dark:bg-gray-700 rounded-lg">
                <span class="text-gray-600 dark:text-gray-300">Passing Attack Rank:</span>
                <span class="font-mono font-semibold text-blue-600 dark:text-blue-400">
                  <%= @home_matchup.passing_attack_rank || 0 %>
                </span>
              </div>
              <div class="flex justify-between items-center p-3 bg-gray-50 dark:bg-gray-700 rounded-lg">
                <span class="text-gray-600 dark:text-gray-300">Rushing Attack Rank:</span>
                <span class="font-mono font-semibold text-green-700 dark:text-green-400">
                  <%= @home_matchup.rushing_attack_rank || 0 %>
                </span>
              </div>
              <div class="flex justify-between items-center p-3 bg-gray-50 dark:bg-gray-700 rounded-lg">
                <span class="text-gray-600 dark:text-gray-300">Field Goal Rank:</span>
                <span class="font-mono font-semibold text-yellow-600 dark:text-yellow-400">
                  <%= @home_matchup.field_goal_rank || 0 %>
                </span>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Navigation -->
    <div class="flex justify-center space-x-4 mb-8">
      <a href="<%= games_week1_path(@year) %>" class="inline-flex items-center px-6 py-3 bg-blue-600 text-white text-lg font-semibold rounded-lg hover:bg-blue-700 transition-colors shadow-lg">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
        </svg>
        Back to Games
      </a>
      
      <a href="<%= matchups_week1_path(@year) %>" class="inline-flex items-center px-6 py-3 bg-green-600 text-white text-lg font-semibold rounded-lg hover:bg-green-700 transition-colors shadow-lg">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
        </svg>
        View Matchups
      </a>
    </div>

    <!-- Footer -->
    <footer class="text-center">
      <div class="text-sm text-gray-500 dark:text-gray-400">
        <p>Prediction data for <%= @week_display %> of the <%= @year %> NFL season</p>
        <p class="mt-2">
          <a href="<%= teams_rankings_path(@year) %>" class="text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300 underline">
            View Team Rankings
          </a>
        </p>
      </div>
    </footer>
  </div>
</div>
